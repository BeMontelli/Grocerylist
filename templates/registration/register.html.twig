{% extends 'front/base.html.twig' %}

{% block title %}{{ 'app.front.register.page_title'|trans }}{% endblock %}

{% block body %}

    <div class="container mt-5 mb-5 narrow__container">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <a href="{{ url('page.root') }}" class="btn btn-primary">
        <i class='bx bx-left-arrow-alt'></i> {{ 'app.front.back.home'|trans }}
    </a>

    <h1 class="mt-3 mb-3">{{ 'app.front.register.title'|trans }}</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

    {{ form_row(registrationForm.username) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'app.front.register.password'|trans
    }) }}

    {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn btn-primary mb-3" type="submit">
            {{ 'app.front.register.btn'|trans }}
        </button>
        <p><a href="{{ url('app_login') }}">{{ 'app.front.login.action'|trans }}</a></p>
                
    {{ form_end(registrationForm) }}
    </div>

{% endblock %}


