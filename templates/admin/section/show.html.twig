{% extends 'admin/base.html.twig' %}

{% block title %}{{ section.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Section</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ section.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ section.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ section.createdAt ? section.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ section.updatedAt ? section.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn-primary btn" href="{{ path('admin.section.index') }}">back to list</a>

        <a class="btn-primary btn" href="{{ path('admin.section.edit', {'id': section.id}) }}">edit</a>

        {{ include('admin/section/_delete_form.html.twig') }}
    </div>
{% endblock %}
