<form action="{{ url('admin.category.delete', { id: category.category.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.category.id) }}">
    <button class="btn-remove btn" type="submit"><i class='bx bx-x'></i></button>
</form>