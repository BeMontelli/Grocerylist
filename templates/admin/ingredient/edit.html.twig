{% extends 'admin/base.html.twig' %}

{% block title %}Edit - {{ ingredient.title }}{% endblock %}

{% block body %}

<div class="container">
    <h1>Edit - {{ ingredient.title }}</h1>
    <a class="btn-primary btn" href="{{ url('admin.ingredient.index') }}">All ingredients</a>

    <hr>
    {% include 'admin/partials/flashes.html.twig' %}

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.section) }}
    {#{{ form_row(form.groceryLists) }}#}
    {{ form_row(form.recipes) }}

    {{ form_row(form.save, {'label': 'app.admin.action.update'|trans}) }}

    {{ form_end(form) }}
    <hr>

</div>
{% endblock %}
