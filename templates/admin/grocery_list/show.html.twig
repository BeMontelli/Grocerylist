{% extends 'admin/base.html.twig' %}

{% block title %}{{ grocery_list.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ grocery_list.title }} - <i style="font-size:0.65em">Current list</i></h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grocery_list.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ grocery_list.createdAt ? grocery_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ grocery_list.updatedAt ? grocery_list.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="data">
            <div class="ingredients__products">
                <h2>{{ 'app.admin.ingredients.title'|trans }}</h3>
                <ul>
                    {% if groceryListIngredients is not empty %}
                        {% for groceryListIngredient in groceryListIngredients %}
                            <li>
                            <strong>{{ groceryListIngredient.ingredient.title }}</strong>
                            <span><br>est coch√© ? : {{ groceryListIngredient.activation ? 'Oui' : 'Non' }}</span>
                            <span><br>est dans la liste ? : {{ groceryListIngredient.inList ? 'Oui' : 'Non' }}</span>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li><strong>{{ 'app.admin.ingredients.none'|trans }}</strong></li>
                    {% endif %}
                </ul>
            </div>

            <div class="recipes">
                <h2>{{ 'app.admin.recipes.title'|trans }}</h3>
                <ul>
                    {% if recipes is not empty %}
                        {% for recipe in recipes %}
                            <li><strong>{{ recipe.title }}</strong></li>
                        {% endfor %}
                    {% else %}
                        <li><strong>{{ 'app.admin.recipes.none'|trans }}</strong></li>
                    {% endif %}
                </ul>
            </div>
        </div>

        <a class="btn-primary btn mb-2" href="{{ path('admin.list.index') }}">{{ 'app.admin.action.backlist'|trans }}</a>

        <a class="btn-primary btn mb-2" href="{{ path('admin.list.edit', {'id': grocery_list.id}) }}">{{ 'app.admin.action.edit'|trans }}</a>

        {{ include('admin/grocery_list/_delete_form.html.twig') }}
    </div>
{% endblock %}
