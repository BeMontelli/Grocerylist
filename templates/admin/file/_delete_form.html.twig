<form method="post" action="{{ path('admin.file.delete', {'id': file.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ file.id) }}">
    <button class="btn-remove btn" type="submit"><i class='bx bx-trash'></i></button>
</form>
