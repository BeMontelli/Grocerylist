{% extends 'admin/base.html.twig' %}

{% block title %}{{ file.title }}{% endblock %}

{% block body %}
    {{ include('admin/partials/page_title.html.twig', {
        'icon': "<i class='icon__page_title bx bx-images' ></i>",
        'title': file.title
    }) }}

    <div class="container container_relative">
        <a class="btn_page_title_overflow btn-primary btn" href="{{ url('admin.file.index') }}"><i class='bx bx-left-arrow-alt'></i> All files</a>
    </div>

    <div class="container">

        <table class="table mb-3">
            <tbody>
                <tr>
                    <th>Title</th>
                    <td>{{ file.title }}</td>
                </tr>
                <tr>
                    <th>Extension</th>
                    <td>{{ file.extension }}</td>
                </tr>
                <tr>
                    <th>Url</th>
                    <td>{{ file.url }}</td>
                </tr>
            </tbody>
        </table>

        {{ include('admin/file/_delete_form.html.twig') }}
    </div>
{% endblock %}
