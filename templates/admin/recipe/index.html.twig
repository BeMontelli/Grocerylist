{% extends 'admin/base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Recipes</h1>
    <a href="{{ url('admin.recipe.create') }}">Create recipe</a>

    <hr>
    {% include 'admin/partials/flashes.html.twig' %}

    {# total items count #}
    <div class="count">
        Results count : {{ recipes.getTotalItemCount }}
    </div>
    <table>
        <tr>
            {# sorting of properties based on query components #}
            <th>{{ knp_pagination_sortable(recipes, 'Id', 'r.id') }}</th>
            <th{% if recipes.isSorted('a.title') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(recipes, 'Title', 'r.title') }}
            </th>
            <th>Categories</th>
            <th{% if recipes.isSorted('a.slug') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(recipes, 'Slug', 'r.slug') }}
            </th>
            <th>Actions</th>
        </tr>

        {# table body #}
        {% for recipe in recipes %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ recipe.id }}</td>
                <td><a href="{{ url('admin.recipe.show', {slug: recipe.slug, id: recipe.id}) }}">{{ recipe.title }}</a></td>
                <td><span>| {{ recipe.category.title | default('---') }} |</span></td>
                <td>{{ recipe.slug }}</td>
                <td>
                    <a href="{{ url('admin.recipe.edit', { id: recipe.id}) }}">Editer</a>
                    <form action="{{ url('admin.recipe.delete', { id: recipe.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(recipes) }}
    </div>
</div>
{% endblock %}
