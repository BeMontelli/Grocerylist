{% extends 'admin/base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Recipes</h1>
    <a href="{{ url('admin.recipe.create') }}">Create recipe</a>

    <hr>
    {% include 'admin/partials/flashes.html.twig' %}

    <ul>
        {% for recipe in recipes %}
            <li>
                <a href="{{ url('admin.recipe.show', {slug: recipe.slug, id: recipe.id}) }}">{{ recipe.title }}</a>
                <a href="{{ url('admin.recipe.edit', { id: recipe.id}) }}">Editer</a>
                <form action="{{ url('admin.recipe.delete', { id: recipe.id}) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit">Supprimer</button>
                </form>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
