{% extends 'admin/base.html.twig' %}

{% block title %}Edit - {{ recipe.title }}{% endblock %}

{% block body %}

<div class="container">
    <h1>Edit - {{ recipe.title }}</h1>
    <a class="btn-primary btn" href="{{ url('admin.recipe.index') }}">All recipes</a>

    <hr>
    {% include 'admin/partials/flashes.html.twig' %}

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.thumbnailfile) }}
    {{ form_row(form.category) }}
    {{ form_row(form.ingredients) }}
    {{ form_row(form.price) }}
    {{ form_row(form.content) }}

    {{ form_row(form.save, {'label':  'app.admin.action.update'|trans}) }}

    {{ form_end(form) }}
    <hr>

</div>
{% endblock %}
