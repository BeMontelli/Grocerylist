{% extends 'admin/base.html.twig' %}

{% block title %}Edit - {{ recipe.title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a class="btn-primary btn" href="{{ url('admin.recipe.index') }}">All recipes</a>
    <h1>Edit - {{ recipe.title }}</h1>

    <hr>
    {% include 'admin/partials/flashes.html.twig' %}

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.thumbnailfile) }}
    {{ form_row(form.category) }}
    {{ form_row(form.ingredients) }}
    {{ form_row(form.price) }}
    {{ form_row(form.content) }}

    {{ form_row(form.save, {'label':  'Update Recipe'}) }}

    {{ form_end(form) }}
    <hr>

</div>
{% endblock %}
