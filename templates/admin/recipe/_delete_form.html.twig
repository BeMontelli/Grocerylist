<form class="delete__form" action="{{ url('admin.recipe.delete', { id: recipe.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
    <button class="btn-remove btn" type="submit"><i class='bx bx-trash'></i></button>
</form>