{% block title %}Edit - {{user.username}}{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('admin/partials/page_title.html.twig', {
            'icon': "<i class='icon__page_title bx bx bxs-user' ></i>",
            'title': 'Edit -' ~ user.username,
            'links': [
                {
                    'url': path('admin.user.index'),
                    'label': "<i class='bx bx-left-arrow-alt'></i> All users",
                    'class': 'btn_page_title_overflow btn-primary btn'
                }
            ]
        }) }}
    {% else %}
        {{ include('admin/partials/page_title.html.twig', {
            'icon': "<i class='icon__page_title bx bx bxs-user' ></i>",
            'title': 'Edit -' ~ user.username,
            'links': [
                {
                    'url': path('admin.user.profile'),
                    'label': "<i class='bx bx-left-arrow-alt'></i> Profile",
                    'class': 'btn_page_title_overflow btn-primary btn'
                }
            ]
        }) }}
    {% endif %}
   
   <div class="container">

    {{ include('admin/user/_form.html.twig', {'button_label': "<i class='bx bx-edit-alt' ></i>"|raw}) }}

