{% extends 'front/base.html.twig' %}

{% block title %}{{ 'app.err.title'|trans }}{% endblock %}

{% block body %}
<div class="err_page container">
    <div class="d-flex flex-row mb-2 align-items-center">
        <i class='icon__page_title bx bxs-error-circle' ></i>
        <div class="p-2"><h1>{{ 'app.err.title'|trans }}</h1></div>
    </div>
    <h2 class="mb-4">{{ 'app.err.error'|trans }} {{ status_code }}</h2>

    <hr>

    <p>{{ 'app.err.txtback'|trans }}</p>
        
    <a class="mt-3 btn-primary btn" href="{{ url('page.home') }}">
        <i class='bx bxs-home-circle' ></i>
        <span>{{ 'app.err.home'|trans }}</span>
    </a>
</div>

{% endblock %}